{
  "scripts": {
    "start": "NODE_ENV=production node dist-server/app.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --base=/CIBERPIKA/ --outDir=docs",
    "build:server": "tsc -p tsconfig.server.json",
    "predeploy": "npm run build",
    "dev": "concurrently \"vite\" \"nodemon --watch src -e ts --exec ts-node src/app.ts\"",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "clean": "rimraf node_modules dist-server public"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  }
}
